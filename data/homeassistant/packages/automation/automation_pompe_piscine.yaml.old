---

automation:

  - alias: Allumer pompe de la piscine (AM)
    trigger:
      platform: time
      at: '11:00:00'
    condition:
      - condition: state
        entity_id: input_boolean.enable_pool_pump
        state: 'on'
    action:
      - service: switch.turn_on
        entity_id: switch.sonoff_4ch_jardin_3

  - alias: Eteindre pompe de la piscine (AM)
    trigger:
      platform: time
      at: '12:00:00'
    condition:
      - condition: state
        entity_id: input_boolean.enable_pool_pump
        state: 'on'    
    action:
      - service: switch.turn_off
        entity_id: switch.sonoff_4ch_jardin_3

  - alias: Allumer pompe de la piscine (PM)
    trigger:
      platform: time
      at: '14:00:00'
    condition:
      - condition: state
        entity_id: input_boolean.enable_pool_pump
        state: 'on'
    action:
      - service: switch.turn_on
        entity_id: switch.sonoff_4ch_jardin_3

  - alias: Eteindre pompe de la piscine (PM)
    trigger:
      platform: time
      at: '17:00:00'
    condition:
      - condition: state
        entity_id: input_boolean.enable_pool_pump
        state: 'on'    
    action:
      - service: switch.turn_off
        entity_id: switch.sonoff_4ch_jardin_3
